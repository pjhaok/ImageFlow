<?xml version="1.0" encoding="utf-8"?>
<com.example.imageflow.view.IFCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:layout_marginTop="16dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/white"
    >

 <ImageView
            android:id="@+id/iv_download"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/regular_image" />


        <TextView
            android:id="@+id/download_file_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            android:layout_marginTop="4dp"/>


    <Button
        android:id="@+id/btn_stop"
        android:alpha="0.4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/ic_action_stop"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_start"
        android:alpha="0.4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_action_sync"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <com.example.imageflow.view.IFProgressBar
        android:id="@+id/pb"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:alpha="0.6"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        />



</RelativeLayout>
</com.example.imageflow.view.IFCardView>